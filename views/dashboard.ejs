<!-- Delete/Update Form -->

 <div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message) {%>
                <div class="alert alert-<%= message.type %>" role="alert">
                    <strong><%= message.message%></strong>
                    </button>
                </div>
            <% } %>
            <div class="table-responsive">
                    <table class="table table-striped text-center">
                         <thead>
                            <tr class="table-dark">
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% if(students != "") {%>
                            <% students.forEach(function(student, index){ %>
                                <tr class="align-middle">
                                    <td><%= student.name %></td>
                                    <td><%= student.phone_number %></td>
                                    <td><%= student.email %></td>
                                    <td><%= moment(student.date).format('MMMM Do YYYY') %></td>
                                    <td><%= student.description %></td>
                                    <td>
                                        <a href="/students/edit-student/<%= student._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    </td>
                                    <td>
                                        <a href="/students/delete-student/<%= student._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No students found in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>  